{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "rebaseWhen": "conflicted",
  "automergeStrategy": "merge-commit",
  "platformAutomerge": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "Xunit.DependencyInjection"
      ],
      "allowedVersions": "^9"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
